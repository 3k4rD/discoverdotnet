@section Head {
    <script src="https://cdn.jsdelivr.net/npm/leaflet@1.3.1/dist/leaflet.js"></script>    
    <script src="https://cdn.jsdelivr.net/npm/vue2-leaflet@0.0.58/dist/vue2-leaflet.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/leaflet@1.3.1/dist/leaflet.css" rel="stylesheet"></link>
}

<groups></groups>

@section Script {
    <script type="text/javascript">
        Vue.component('v-map', Vue2Leaflet.Map);
        Vue.component('v-tilelayer', Vue2Leaflet.TileLayer);
        Vue.component('v-marker', Vue2Leaflet.Marker);

        Vue.component('groups', httpVueLoader('/components/groups/groups.vue'));
    </script>
}