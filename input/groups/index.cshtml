@section Head {    
    <script src="https://cdn.jsdelivr.net/npm/leaflet@1.3.1/dist/leaflet.min.js"></script> 
    <script src="https://cdn.jsdelivr.net/npm/vue2-leaflet@0.0.58/dist/vue2-leaflet.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/leaflet@1.3.1/dist/leaflet.min.css" rel="stylesheet"></link>
}

<groups></groups>

@section Script {
    <script type="text/javascript">
        Vue.component('v-map', Vue2Leaflet.Map);
        Vue.component('v-tilelayer', Vue2Leaflet.TileLayer);
        Vue.component('v-marker', Vue2Leaflet.Marker);
        Vue.component('v-popup', Vue2Leaflet.Popup);

        Vue.component('groups', httpVueLoader('/components/groups/groups.vue'));        
        Vue.component('card-map', httpVueLoader('/components/card-map.vue'));
    </script>
}